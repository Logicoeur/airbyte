version: "0.1.0"

definitions:
  selector:
    extractor:
      field_pointer: []
  requester:
    name: "\{{ options['name'] }}"
    http_method: "GET"
    authenticator:
      type: BearerAuthenticator
      api_token: "\{{ config['api_key'] }}"
  retriever:
    $options:
      url_base: "https://example.com/"
    name: "\{{ options['name'] }}"
    primary_key: "\{{ options['primary_key'] }}"
    record_selector:
      $ref: "*ref(definitions.selector)"
    paginator:
      type: NoPagination
  base_stream:
    retriever:
      $ref: "*ref(definitions.retriever)"
  customers_stream:
    $ref: "*ref(definitions.base_stream)"
    $options:
      name: "customers"
      primary_key: "id"
      path: "/example"

streams:
  - "*ref(definitions.customers_stream)
check:
  stream_names: ["customers"]
